{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Snapshot & Push",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "$date = Get-Date -Format 'yyyy-MM-dd HH:mm:ss'; git add .; git commit -m \"Snapshot: $date\"; git push"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}